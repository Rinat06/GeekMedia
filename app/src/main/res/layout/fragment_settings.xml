<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.profile.SettingsFragment">

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="17dp"
        android:layout_height="24dp"
        tools:ignore="ContentDescription,MissingConstraints"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:background="@drawable/arrowback_24" />

    <TextView
        android:id="@+id/btn_settings_profile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        tools:ignore="MissingConstraints"
        android:textSize="17sp"
        android:text="@string/settings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="49dp"
        android:textColor="@color/black" />
    
    <TextView
        android:id="@+id/notifications"
        android:layout_width="102dp"
        android:layout_height="21dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/notifications"
        android:textColor="@color/black"
        android:layout_marginStart="31dp"
        tools:ignore="MissingConstraints" />


    <Switch
        android:id="@+id/switch_n"
        style="@style/SwitchButton"
        android:layout_marginStart="159dp"
        app:layout_constraintBottom_toBottomOf="@+id/notifications"
        app:layout_constraintStart_toEndOf="@+id/notifications"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />


    <Switch
        android:id="@+id/switch_s"
        style="@style/SwitchButton"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/text_sound"
        app:layout_constraintTop_toBottomOf="@+id/switch_n"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />


    <Switch
        android:id="@+id/switch_v"
        style="@style/SwitchButton"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/text_vibration"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />


    <Switch
        style="@style/SwitchButton"
        app:layout_constraintStart_toEndOf="@+id/download"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/line3"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />


    <View
        style="@style/SettingsLine"
        android:id="@+id/line"
        android:background="@color/black_gray"
        app:layout_constraintTop_toBottomOf="@+id/text_sound"
        tools:ignore="MissingConstraints" />


    <View
        style="@style/SettingsLine"
        android:id="@+id/line2"
        android:background="@color/black_gray"
        app:layout_constraintTop_toBottomOf="@+id/text_start"
        tools:ignore="MissingConstraints" />


    <View
        style="@style/SettingsLine"
        android:id="@+id/line3"
        android:background="@color/black_gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text_end"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/line4"
        style="@style/SettingsLine"
        android:background="@color/black_gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/download_text"
        tools:ignore="MissingConstraints" />




    <TextView
        android:id="@+id/text_sound"
        style="@style/TextSettings"
        android:layout_marginTop="10dp"
        android:text="@string/Sound"
        app:layout_constraintTop_toBottomOf="@+id/notifications"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/text_vibration"
        style="@style/TextSettings"
        android:text="@string/Vibration"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/text_start"
        style="@style/TextSettings"
        android:layout_width="306dp"
        app:layout_constraintTop_toBottomOf="@+id/text_vibration"
        android:layout_marginTop="52dp"
        android:text="@string/Start"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/text_end"
        style="@style/TextSettings"
        android:layout_width="306dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:text="@string/End"
        tools:ignore="MissingConstraints" />
    
    
    <TextView
        android:id="@+id/quiet_mode"
        android:layout_width="102dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/quiet_mode"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_vibration"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/download"
        style="@style/TextSettings2"
        android:text="@string/download"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        tools:ignore="MissingConstraints" />

    <TextView
        style="@style/MiniText"
        android:id="@+id/download_text"
        android:textColor="@color/gray2"
        android:text="@string/download_text"
        app:layout_constraintTop_toBottomOf="@+id/download"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/memory"
        style="@style/TextSettings2"
        android:textColor="@color/black"
        android:text="@string/memory"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/line4" />

    <TextView
        android:id="@+id/memory_text"
        style="@style/MiniText"
        android:text="@string/memory"
        app:layout_constraintTop_toBottomOf="@+id/memory"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>