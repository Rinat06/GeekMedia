<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeekMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <style name="SwitchButton">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">25dp</item>
    </style>


    <style name="TextSettings">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="background">@color/gray</item>
    </style>


    <style name="SettingsLine">
        <item name="android:layout_width">306dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>
    
    
    <style name="TextSettings2">
        <item name="android:layout_width">188dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="MiniText">
        <item name="android:layout_width">276dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">31dp</item>
    </style>




    
</resources>